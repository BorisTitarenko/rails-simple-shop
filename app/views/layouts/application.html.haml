!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MusicShop
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body

    .navbar.navbar-expand-lg.bg-light.navbar-light.mb-3
      .container
        = link_to "", root_path, class: 'navbar-brand'
        %ul.navbar-nav.mr-auto
          %li.nav-item
            = link_to "Home", root_path, class: 'nav-link'
          %li.nav-item
            = link_to "Shopping card", order_items_path, class: 'btn btn-dark'
        %ul.navbar-nav
          %li.nav-item
            - if user_signed_in?
              %li.nav-item
                = link_to "Sell", new_instrument_path, class: 'btn btn-primary'
              %li.nav-item
                = link_to current_user.name, sales_path, class: "dropdown-item"
              %li.nav-item
                = link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item"
            - else
              %li.nav-item
                = link_to "Sign In", new_user_session_path, class: 'nav-link'
              %li.nav-item
                = link_to "Create an Account", new_user_registration_path, class: 'btn btn-primary'
    .container.text-center
      = yield
